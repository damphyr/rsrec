# -*- ruby -*-
# -*- coding: utf-8 -*-
# encoding: utf-8
$:.unshift File.join(File.dirname(__FILE__),"lib")
require 'rsrec/version'
require 'hoe'

Hoe.spec 'rsrec' do |prj|
  developer('Vassilis Rizopoulos', 'vassilisrizopoulos@gmail.com')
  prj.version=S19::Version::STRING
  prj.summary = 'rsrec provides classes for parsing Motorola\'s S-Record format'
  prj.description = prj.paragraphs_of('README.txt', 1..5).join("\n\n")
  prj.urls = ["http://github.com/damphyr/rsrec"]
  prj.changes = prj.paragraphs_of('History.txt', 0..1).join("\n\n")
end

